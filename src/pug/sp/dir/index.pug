extends /sp/layout/layout

block data
  -
    page = index

block css
  link(href=CSS_DIR + 'index.css' rel='stylesheet' type='text/css')

block script
  script(src=JS_DIR + 'index.js' type='text/javascript' charset='UTF-8')

block content
  p PROTOCOL: #{PROTOCOL}
  p SERVER_NAME: #{SERVER_NAME}
  p HOST_NAME: #{HOST_NAME}
  p CANONICAL_ROOT: #{CANONICAL_ROOT}
  p INDEX_DIR: #{INDEX_DIR}
  p ASSETS_DIR: #{ASSETS_DIR}
  p CSS_DIR: #{CSS_DIR}
  p JS_DIR: #{JS_DIR}
  p IMAGE_DIR: #{IMAGE_DIR}
